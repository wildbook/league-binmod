{
  "name": "colored",
  "version": "1.0.0",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --out-dir .local/dist --minify",
    "watch": "tsup src/index.ts --format esm --out-dir .local/dist --watch --onSuccess \"node .local/dist/index.js\"",
    "start": "tsup src/index.ts --format esm --out-dir .local/dist --onSuccess \"node .local/dist/index.js\""
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "node-color-log": "^13.0.3",
    "zx": "^8.7.1"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": false
  }
}