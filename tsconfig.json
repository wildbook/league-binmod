{
    "compilerOptions": {
        "target": "es2024",
        "module": "node18",
        "moduleResolution": "node16",
        "lib": [
            "esnext",
        ],
        "strict": true,
        "noImplicitAny": false,
        "removeComments": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "noEmit": true,
        "types": [
            "node",
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}